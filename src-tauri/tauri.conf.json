{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "STT Agent",
  "version": "1.1.7",
  "identifier": "com.jason.stt-agent-rust",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "STT Agent",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' asset: https://asset.localhost; style-src 'self' 'unsafe-inline';"
    }
  },
  "bundle": {
    "active": true,
    "createUpdaterArtifacts": "v1Compatible",
    "targets": [
      "nsis",
      "deb"
    ],
    "externalBin": [
      "ffmpeg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/STTAgent2.ico"
    ]
  },
  "plugins": {
    "updater": {
      "pubkey": "dW50cnVzdGVkIGNvbW1lbnQ6IG1pbmlzaWduIHB1YmxpYyBrZXk6IDc3MTU0MzU0QkVDNjRCMkMKUldRc1M4YStWRU1WZHlSb1pnc0hheEw5aHc3MkV3YWlkN3R1cVo1TzJFcVBrbEt0MVZwZWErZisK",
      "endpoints": [
        "https://github.com/jasoncdc/STT_Agent_Rust/releases/latest/download/latest.json"
      ]
    }
  }
}